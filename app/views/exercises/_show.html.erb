<% if @user.exercises.any? %>
  <%= sortable "name", "Sort By Name", "exercise" %>
  <%= sortable "calories", "Sort By Calories", "exercise" %>
  <% @exercises.each do |exercise| %>
    <p><%= exercise.name %>: <%= exercise.calories %></p>
  <% end %>
<% end %>

<p>Total: <%= @user.exercise_calories %> calories burned</p>
