<div id="flash">
  <%= render 'layouts/flash' %>
</div>

<h1 class="title-font">Dashboard</h1>

<div id="total_calories">
  <%= render "total" %>
</div>

<div class="row">
  <div class="col-xs-6">
    <%= link_to 'Add Food', new_user_food_path(@user), id: 'new_user_food_link', remote: true, method: 'get', class: 'btn-lg btn btn-success' %>
    <hr>
    <div id="food_show">
      <%= render "foods/show" %>
    </div>
  </div>

  <div class="col-xs-6">
    <%= link_to 'Add Exercise', new_user_exercise_path(@user), id: 'new_user_exercise_link', remote: true, method: 'get', class: 'btn-lg btn btn-success' %>
    <hr>
    <div id="exercise_show">
      <%= render "exercises/show" %>
    </div>
  </div>
</div>
<div id="chart_row" class="row">
  <%= render "charts" %>
</div>
