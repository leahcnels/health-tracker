<% if @user.foods.any? %>
  <%= sortable "name", "Sort By Name", "food", @user %>
  <%= sortable "calories", "Sort By Calories", "food", @user %>
  <% @foods.each do |food| %>
    <p><%= food.name %>: <%= food.calories %></p>
  <% end %>
  <%= will_paginate @foods, :params => { :controller => 'users', :action => 'show', :id => @user.id }, :param_name => 'food_paginate' %>
  <h4>Total: <%= @user.food_calories %> calories consumed</h4>
  <hr>
<% end %>
